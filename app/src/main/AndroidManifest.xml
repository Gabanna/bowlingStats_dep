<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.rgse.bowlingstats">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateBowler"
            android:label="@string/title_activity_create_bowler"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".BowlersActivity"
            android:label="@string/title_activity_bowlers"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SeriesListActivity"
            android:label="@string/title_activity_series_list"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SeriesActivity"
            android:label="@string/title_activity_series"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".CreateSeriesActivity"
            android:label="@string/title_activity_create_series"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".StatisticBowlerActivity"
            android:label="@string/title_activity_statistic_bowler"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".EditSeriesActivity"
            android:label="@string/title_activity_edit_series"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>